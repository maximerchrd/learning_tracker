<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sciquizapp.sciquiz"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" /> -->
    <application
        android:name="com.sciquizapp.sciquiz.LTApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sciquizapp.sciquiz.Activities.MenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sciquizapp.sciquiz.Activities.QuizActivity"
            android:label="@string/title_activity_quiz" />
        <activity
            android:name="com.sciquizapp.sciquiz.Activities.ResultActivity"
            android:label="@string/title_activity_result" />
        <activity
            android:name="com.sciquizapp.sciquiz.Activities.ScoresActivity"
            android:label="@string/title_activity_scores" />
        <activity
            android:name="com.sciquizapp.sciquiz.Activities.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="com.sciquizapp.sciquiz.AndroidClient"
            android:label="@string/title_activity_client" />
        <activity
            android:name="com.sciquizapp.sciquiz.Activities.MultChoiceQuestionActivity"
            android:label="@string/title_activity_question" />
        <activity
            android:name="com.sciquizapp.sciquiz.Activities.QuestionActivity"
            android:label="@string/title_activity_question" />
        <activity
            android:name="com.sciquizapp.sciquiz.Activities.InteractiveModeActivity$BluetoothClientActivity"
            android:label="@string/title_activity_bluetoothclient" />
        <activity
            android:name="com.sciquizapp.sciquiz.Activities.SingleQuestionActivity"
            android:label="@string/title_activity_question" />
        <activity
            android:name="com.sciquizapp.sciquiz.Activities.InteractiveModeActivity"
            android:label="@string/title_activity_interactivemode" />
        <activity
            android:name="com.sciquizapp.sciquiz.Activities.EvaluationResultsActivity"
            android:label="@string/title_activity_evaluation_results" />
    </application>

</manifest>