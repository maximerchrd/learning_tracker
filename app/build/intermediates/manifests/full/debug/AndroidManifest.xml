<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sciquizapp.sciquiz"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <!-- <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" /> -->
    <application
        android:name="com.sciquizapp.sciquiz.LTApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sciquizapp.sciquiz.MenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sciquizapp.sciquiz.QuizActivity"
            android:label="@string/title_activity_quiz" >
        </activity>
        <activity
            android:name="com.sciquizapp.sciquiz.ResultActivity"
            android:label="@string/title_activity_result" >
        </activity>
        <activity
            android:name="com.sciquizapp.sciquiz.ScoresActivity"
            android:label="@string/title_activity_scores" >
        </activity>
        <activity
            android:name="com.sciquizapp.sciquiz.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.sciquizapp.sciquiz.AndroidClient"
            android:label="@string/title_activity_client" >
        </activity>
        <activity
            android:name="com.sciquizapp.sciquiz.QuestionActivity"
            android:label="@string/title_activity_question" >
        </activity>
        <activity
            android:name="com.sciquizapp.sciquiz.BluetoothClientActivity"
            android:label="@string/title_activity_bluetoothclient" >
        </activity>
        <activity
            android:name="com.sciquizapp.sciquiz.SingleQuestionActivity"
            android:label="@string/title_activity_question" >
        </activity>
        <activity
            android:name="com.sciquizapp.sciquiz.InteractiveModeActivity"
            android:label="@string/title_activity_interactivemode" >
        </activity>
    </application>

</manifest>