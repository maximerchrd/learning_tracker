<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sciquizapp.sciquiz"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".LTApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MenuActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.QuizActivity"
            android:label="@string/title_activity_quiz"></activity>
        <activity
            android:name=".Activities.ResultActivity"
            android:label="@string/title_activity_result"></activity>
        <activity
            android:name=".Activities.ScoresActivity"
            android:label="@string/title_activity_scores"></activity>
        <activity
            android:name=".Activities.SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
        <activity
            android:name=".AndroidClient"
            android:label="@string/title_activity_client"></activity>
        <activity
            android:name=".Activities.MultChoiceQuestionActivity"
            android:label="@string/title_activity_question"></activity>
        <activity
            android:name=".Activities.QuestionActivity"
            android:label="@string/title_activity_question"></activity>
        <activity
            android:name=".Activities.SingleQuestionActivity"
            android:label="@string/title_activity_question"></activity>
        <activity
            android:name=".Activities.InteractiveModeActivity"
            android:label="@string/title_activity_interactivemode"></activity>
        <activity
            android:name=".Activities.EvaluationResultsActivity"
            android:label="@string/title_activity_evaluation_results"></activity>
    </application>

</manifest>